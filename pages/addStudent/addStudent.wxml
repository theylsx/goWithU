<!--pages/addStudent/addStudent.wxml-->
<view class="page">

  <view class="page__bd">
    <wux-cell-group title="请输入学生信息">
      <wux-cell hover-class="none">
        <wux-input thumb="../../icon/name.png" label="名字" placeholder="请输入名字" bind:change="getName"/>
      </wux-cell>
      <wux-cell hover-class="none">
        <wux-input thumb="../../icon/hospital.png"  label="所在医院" placeholder="请输入所在医院" bind:change="getHospital"/>
      </wux-cell>

    </wux-cell-group>



<view class="button">
        <wux-button block type="calm" bind:click="showToast">添加学生</wux-button>
  
    </view>

  </view>
</view>